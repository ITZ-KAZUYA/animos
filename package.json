{
  "version": "0.2.2",
  "name": "animos",
  "main": "dist/index.js",
  "license": "CC-BY-NC-ND-4.0",
  "author": {
    "name": "Keerthi Vasan S A",
    "email": "sakeerthi23@gmail.com",
    "url": "https://github.com/Nectres/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nectres/animos.git"
  },
  "description": "Animos is an application to discover and stream Anime with ease",
  "scripts": {
    "svelte:dev": "cd svelte-src & yarn dev",
    "svelte:build": "cd svelte-src && yarn build",
    "prepackage": "tsc && npm run svelte:build && npm run db:deploy",
    "db:deploy": "npx prisma generate && node move.js",
    "db:dev": "node move.js back",
    "dev": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run svelte:dev\" \"npm run electron:dev\"",
    "electron:start": "tsc && electron dist/index.js",
    "electron:dev": "nodemon",
    "package": "electron-builder --dir && npm run db:dev",
    "publish": "npm run prepackage && electron-builder --publish always",
    "make": "npm run prepackage && electron-builder && npm run db:dev"
  },
  "build": {
    "appId": "com.keerthivasan.animos",
    "productName": "Animos",
    "win": {
      "publish": [
        "github"
      ]
    },
    "mac": {
      "publish": [
        "github"
      ]
    },
    "linux": {
      "publish": [
        "github"
      ]
    },
    "asar": true,
    "directories": {
      "output": "out"
    },
    "nsis": {
      "oneClick": false,
      "license": "LICENSE",
      "installerIcon": "build/icons/favicon.ico"
    },
    "files": [
      "dist/**/*",
      "output/**/*"
    ],
    "extraResources": [
      "prisma/cache.db",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "electron": "^21.2.2",
    "electron-builder": "22.10.3",
    "nodemon": "^2.0.20",
    "prettier-plugin-svelte": "^2.8.0",
    "prisma": "^4.6.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "axios": "^1.1.3",
    "cheerio": "^1.0.0-rc.12",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "electron-serve": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.0.11"
  }
}
