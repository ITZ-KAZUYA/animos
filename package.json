{
  "version": "0.2.2",
  "name": "animos",
  "main": "dist/index.js",
  "license": "CC-BY-NC-ND-4.0",
  "author": {
    "name": "Keerthi Vasan S A",
    "email": "sakeerthi23@gmail.com",
    "url": "https://github.com/Nectres/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nectres/animos.git"
  },
  "description": "Animos is an application to discover and stream Anime with ease",
  "scripts": {
    "svelte:dev": "cd svelte-src && yarn dev",
    "test": "jest",
    "svelte:build": "cd svelte-src && yarn build",
    "dev": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run svelte:dev\" \"npm run electron:dev\"",
    "electron:start": "tsc && electron dist/index.js | pino-pretty",
    "electron:dev": "nodemon",
    "build": "npm run svelte:build && tsc && electron-builder"
  },
  "build": {
    "appId": "com.keerthivasan.animos",
    "productName": "Animos",
    "win": {
      "publish": [
        "github"
      ]
    },
    "mac": {
      "publish": [
        "github"
      ]
    },
    "linux": {
      "publish": [
        "github"
      ]
    },
    "asar": true,
    "directories": {
      "output": "out"
    },
    "nsis": {
      "oneClick": false,
      "license": "LICENSE",
      "installerIcon": "build/icons/favicon.ico"
    },
    "files": [
      "dist/**/*",
      "output/**/*"
    ],
    "extraResources": [
      "prisma/cache.db",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "concurrently": "^7.5.0",
    "electron": "^21.2.2",
    "electron-builder": "22.10.3",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier-plugin-svelte": "^2.8.0",
    "prisma": "^4.6.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "@trpc/client": "^10.0.0-rc.8",
    "@trpc/server": "^10.0.0-rc.8",
    "axios": "^1.1.3",
    "axios-cache-interceptor": "^0.10.7",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "electron-log": "^4.4.8",
    "electron-serve": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.0.11",
    "pino": "^8.7.0",
    "pocketbase": "^0.7.4",
    "zod": "^3.19.1"
  }
}
