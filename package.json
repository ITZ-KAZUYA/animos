{
  "version": "0.0.1",
  "name": "animos",
  "main": "dist/index.js",
  "license": "CC-BY-NC-ND-4.0",
  "author": {
    "name": "Keerthi Vasan S A",
    "email": "sakeerthi23@gmail.com",
    "url": "https://github.com/Nectres/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nectres/animos.git"
  },
  "description": "Animos is an application to discover and stream Animes with ease",
  "scripts": {
    "svelte:dev": "cd svelte-src & yarn dev",
    "svelte:build": "cd svelte-src && yarn build",
    "start": "electron-forge start",
    "prepackage": "tsc && npm run svelte:build",
    "dev": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run svelte:dev\" \"npm run electron:dev\"",
    "electron:start": "tsc &&electron dist/index.js",
    "electron:dev": "nodemon",
    "package": "electron-builder --dir",
    "make": "npm run package && electron-builder",
    "publish": "npm run prepackage && electron-builder --publish always"
  },
  "build": {
    "appId": "com.keerthivasan.animos",
    "productName": "Animos",
    "win": {
      "publish": [
        "github"
      ]
    },
    "asar": true,
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "output/**/*"
    ],
    "extraResources": [
      "prisma/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "electron": "^21.2.2",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.6.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.6.0",
    "axios": "^1.1.3",
    "cheerio": "^1.0.0-rc.12",
    "crypto-js": "^4.1.1",
    "electron-serve": "^1.1.0",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.0.11"
  }
}
