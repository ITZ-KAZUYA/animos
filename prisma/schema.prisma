// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./cache.db?connection_limit=5"
}

model Response {
  url      String @id
  response String
}

model Genre {
  malId Int    @id
  name  String @unique
}

model Anime {
  kitsuId     String   @id
  malId       Int?     @unique
  synopsis    String
  title_en    String?
  title_jp    String?
  title       String
  posterImg   String
  coverImg    String?
  score       Float
  episodes    Int?
  slug        String?
  dubSlug     String?
  poster      Int?
  lastUpdated DateTime @default(now()) @updatedAt
}
