// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./cache.db?connection_limit=5"
}

model Poster {
  created DateTime @updatedAt
  malId   Int      @id
  title   String
  img     String
  index   Int
  score   Float
}

model Settings {
  id             Int     @id
  currentAnime   String?
  currentEpisode Int?
  googleId       String
  userId         String
}

model Episode {
  watchTime     Int       @default(0)
  lastWatched   DateTime?
  title         String
  episodeId     Int
  anime         Anime     @relation(fields: [animeId], references: [malId])
  animeId       Int
  synopsis      String?
  source        String?
  length        Int?
  sourceBackup  String?
  linkFetchedOn DateTime?

  @@id([animeId, episodeId])
}

model Anime {
  animeId       String?
  malId         Int       @id
  title         String
  englishTitle  String
  img           String
  totalEpisodes Int
  synopsis      String
  type          String
  currentEp     Int
  status        String
  score         Float
  Episode       Episode[]
}
